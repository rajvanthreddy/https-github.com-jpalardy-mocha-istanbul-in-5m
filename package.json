{
  "name": "mocha-nyc-in-5m",
  "version": "0.0.1",
  "description": "minimal mocha/nyc setup",
  "scripts": {
    "test":     "mocha --reporter dot",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test"
 
  "name": "continuous-test-code-coverage-guide",
  "scripts": {
    "start": "webpack",
    "test": "jest --coverage --coverageDirectory=output/coverage/jest"
  },
  
  "jest": {
    "coverageReporters": [
      "text",
      "cobertura"
    ]
    
  }
}
  
 
 
  "license": "MIT",
  "devDependencies": {
    "mocha": "5.0.1",
    "nyc": "11.4.1"
  }
}
